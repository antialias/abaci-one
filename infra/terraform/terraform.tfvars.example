# Copy this to terraform.tfvars and fill in values

# Required
letsencrypt_email = "your-email@example.com"
auth_secret       = "generate-with-openssl-rand-base64-32"

# Optional - AI features (flowchart generation, etc.)
# openai_api_key    = "sk-..."

# Optional - Stripe billing (product, prices, and webhook are auto-created by Terraform)
# stripe_secret_key = "sk_live_..."

# Optional - Web Push notifications (VAPID keys)
# Generate with: npx web-push generate-vapid-keys --json
# vapid_public_key  = "B..."
# vapid_private_key = "..."

# Optional overrides
# app_domain        = "abaci.one"
# app_image         = "ghcr.io/antialias/soroban-abacus-flashcards:latest"
# app_replicas      = 2
# use_staging_certs = true  # Set to true when testing to avoid rate limits
